<div class="container-header"></div>
<div class="container p-5">
  <div class="row">
    <div class="col-6">
      <h2 style="text-align: center; margin-top: 16px; font-size: xxx-large; font-weight: bold;">Rejoignez Yarder !</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="row form-inputs p-5">
          <div class="col-6">
            <%= f.input :first_name,
                      required: false,
                      autofocus: true,
                      placeholder: 'Elon',
                      label: 'Prénom',
                      :label_html => { :class => 'label' },
                      input_html: { autocomplete: "first_name" }%>
          </div>
          <div class="col-6">
                      <%= f.input :last_name,
                      required: false,
                      autofocus: true,
                      placeholder: 'Musk',
                      label: 'Nom',
                      :label_html => { :class => 'label' },
                      input_html: { autocomplete: "last_name" }%>
          </div>
          <div class="col-6">
          <%= f.input :phone_number,
                      required: false,
                      autofocus: true,
                      placeholder: '0607080910',
                      label: 'Numéro de téléphone',
                      :label_html => { :class => 'label' },
                      input_html: { autocomplete: "phone_number" }%>
          </div>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: 'elon.musk@spacex.com',
                      label: 'Email',
                      :label_html => { :class => 'label' },
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: false,
                      label: 'Mot de passe',
                      :label_html => { :class => 'label' },
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      label: 'Confirmer votre mot de passe',
                      :label_html => { :class => 'label' },
                      input_html: { autocomplete: "new-password" } %>
          <div class="form-actions d-flex justify-content-end">
            <%= f.button :submit, "Commencer", class: 'btn btn-primary' %>
          </div>
          <div class="py-5">
            <div class="d-flex justify-content-start align-items-baseline">
                <p>Déjà un compte ?</p>
                <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-link ms-2" %><br />
            </div>
          </div>
        </div>
      <% end %>

    </div>

    <div class="col-6">
      <img class="img-signup" src="https://images.unsplash.com/photo-1532323544230-7191fd51bc1b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80" alt="Login home">
    </div>
  </div>
</div>
