<div class="container p-5">
  <div class="row">
    <div class="col-6">
      <h2 style="text-align: center; margin-top: 16px; font-size: xxx-large; font-weight: bold;">Bienvenue !</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

        <div class="row justify-content-center">
          <div class="col text-center">
            <div class="form-actions" style="display: flex; justify-content: space-between; font-size: 12px;">
              <%= f.button :submit, "Log in", class: 'btn btn-black' %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-6">
      <img class="img-login" src="https://images.unsplash.com/photo-1554995207-c18c203602cb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="Login home">
    </div>
  </div>
</div>
