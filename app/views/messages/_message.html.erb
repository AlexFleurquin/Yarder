<div class="d-flex justify-content-end">
  <div class="<%= message.sender?(current_user) ? 'sender-style' : 'receiver-style' %>" >
    <small>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </small>
    <p><%= message.content %></p>
  </div>
</div>
