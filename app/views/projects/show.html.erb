<div class="header">
  <div class="container-header container">
      <div class="d-flex flex-direction-row header-project">
        <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" alt="">
        <div class="">
          <h5><%= @project.name %></h5>
          <p><%= @project.address %></p>
        </div>
    </div>
    <nav class="mt-5">
      <div class="nav nav-pills" id="nav-tab" role="tablist">
        <button class="nav-link nav-link-dashboard active" id="nav-bookings-tab" data-bs-toggle="tab" data-bs-target="#nav-overview" type="button" role="tab" aria-controls="nav-overview" aria-selected="true">Synthèse</button>
        <button class="nav-link nav-link-dashboard" id="nav-validations-tab" data-bs-toggle="tab" data-bs-target="#nav-rooms" type="button" role="tab" aria-controls="nav-rooms" aria-selected="true">Pièces</button>
        <button class="nav-link nav-link-dashboard" id="nav-validations-tab" data-bs-toggle="tab" data-bs-target="#nav-calendar" type="button" role="tab" aria-controls="nav-calendar" aria-selected="true">Planning</button>
        <button class="nav-link nav-link-dashboard" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-craftmen" type="button" role="tab" aria-controls="nav-craftmen" aria-selected="true">Artisans</button>
        <button class="nav-link nav-link-dashboard" id="nav-validations-tab" data-bs-toggle="tab" data-bs-target="#nav-documents" type="button" role="tab" aria-controls="nav-documents" aria-selected="true">Documents</button>
      </div>
    </nav>
  </div>
</div>

<div class="container py-5">

  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-bookings" role="tabpanel" aria-labelledby="nav-bookings-tab" tabindex="0">
      <section class="section row">
        <div class="col-5">
          <h2>Bienvenue à à la maison</h2>
          <h3 class="mt-5">Description</h3>
          <p><%= @project.description %></p>
        </div>
        <div class="col-3 card-params">
        </div>
        <div class="col-4 card-params">
          <h6>Paramètre du projet</h6>
          <p><i class="fa-solid fa-location-dot px-3"></i><%= @project.address %></p>
          <div class="card-grid">
          </div>
          <div class="d-flex justify-content-around">
            <div class="d-flex align-items-start">
              <i class="fa-solid fa-location-dot px-3"></i>
              <p><li><%= @project.address %></li></p>
            </div>
            <div class="d-flex align-items-start">
              <i class="fa-solid fa-helmet-safety px-3"></i>
              <p><li><%= @project.construction_year %></li></p>
            </div>
            <div class="d-flex align-items-start">
              <i class="fa-solid fa-house px-3"></i>
              <p><li><%= @project.building_type %></li></p>
            </div>
          </div>
          <p><i class="fa-solid fa-hourglass-half"></i><li><%= @project.urgency %></li></p>
          <p><li><%= @project.budget %> €</li></p>
        </div>
      </section>
      <section>
        <%= render "shared/rooms" %>
      </section>
    </div>


    <div class="tab-pane fade show" id="nav-validations" role="tabpanel" aria-labelledby="nav-validations-tab" tabindex="0">
      <section class="section">
        <div class="d-flex justify-content-start align-items-center">

          </div>
        </div>
      </section>
    </div>


    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
      <section class="section">
        <div class="d-flex justify-content-start align-items-center">

          </div>
        </div>
      </section>
    </div>
  </div>
</div>
