<div class="container" data-controller="rooms-photo">
  <div class="row" >
    <%= simple_form_for [@project, @room] do |f| %>
      <%= f.input :room_type,
                as: :check_boxes,
                collection: Room::ROOM_TYPES,
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'category-wrapper',
                item_wrapper_class: 'category-item',
                input_html: {class: 'category-selector', data: { action: "change->rooms-photo#display" }},
                :label_html => { :class => 'label' }, label: "Type de piÃ¨ce :" %>
      <div class="row mt-2" style="width: 1105px; padding-left: 12px;">
        <% Room::ROOM_TYPES.each_with_index do |room, i| %>
          <div class="col-3" data-controller="preview" data-preview-room-value="<%=i%>" style="display: flex; justify-content: center; padding: 0; width: ">
            <div class="row">
              <%= f.simple_fields_for room.to_sym do |ff|  %>
                <%= ff.input :photos, as: :file,
                              input_html: { multiple: true, class: "d-none", data: { action: "change->preview#previewMultiple" }},
                              label_html: { id: room, class: 'upload_photo d-none', data: {rooms_photo_target: "hidden"}}, label: 'ðŸ“· Ajouter des photos' %>
              <% end %>
            </div>
            <div class="row">
              <img id="output1<%=i%>" class="d-none img_preview" data-preview-target="output1" src="#" alt="your image" style="border-radius: 10px; box-shadow: 0px 1px 2px rgba(15, 23, 42, 0.04);" />
              <img id="output2<%=i%>" class="d-none img_preview" data-preview-target="output2" src="#" alt="your image" style="border-radius: 10px; box-shadow: 0px 1px 2px rgba(15, 23, 42, 0.04);" />
              <img id="output3<%=i%>" class="d-none img_preview" data-preview-target="output3" src="#" alt="your image" style="border-radius: 10px; box-shadow: 0px 1px 2px rgba(15, 23, 42, 0.04);" />
            </div>
          </div>
        <% end %>
      </div>
      <div class="row">
        <%= f.submit "Ajouter", class: "btn-modal submit_form_new"%>
      </div>
    <% end %>
  </div>
</div>
