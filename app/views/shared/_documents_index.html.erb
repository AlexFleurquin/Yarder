<div class="d-flex justify-content-between align-items-baseline">
  <h1>Documents</h1>
  <%= link_to do %>
    <button class="btn btn-primary"><i class="fa-solid fa-plus"></i> Ajouter un document</button>
  <% end %>
</div>

<div class="container mt-5">
  <%# if @professionals.empty? %>
    <div class="d-flex flex-column align-items-center mt-5">
      <%= render :partial => 'svg/empty_doc' %>
      <h5 class="mt-5">Pas encore de documents ?</h5>
      <p class="mt-1">Centraliser tous les documents de votre projet (Devis, factures, plans, contrats,...) </p>
      <button type="button" class="btn btn-empty mt-4"><i class="fa-solid fa-plus"></i> Ajouter un document</button>
    </div>
  <%# else %>
  <%# end %>
</div>
