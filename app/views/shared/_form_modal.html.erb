                as: :check_boxes,
                collection: Room::ROOM_TYPES,
                collection_wrapper_tag: 'div',
                collection_wrapper_class: 'category-wrapper',
                item_wrapper_class: 'category-item',
                input_html: {class: 'category-selector', data: { action: "change->rooms-photo#display" }},
