          <div class="col-3" style="display: flex; justify-content: center; padding: 0; width: ">
            <%= f.simple_fields_for room.to_sym do |ff|  %>
              <%= ff.input :photos, as: :file,
                            input_html: { multiple: true, class: "d-none" },
