
<div class="d-flex justify-content-between">
  <h2>Bienvenue à la maison</h2>
  <div class="dropdown">

    <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <h6>
        <i class="fa-solid fa-ellipsis"></i>
      </h6>
    </a>

    <ul class="dropdown-menu">
      <%= link_to edit_project_path(@project), class: 'text-decoration-none' do %>
        <li><p class="dropdown-item"><i class="fa-solid fa-pen pe-2"></i>Modifier</p></li>
      <% end %>
      <%= link_to project_path(@project), class: 'text-decoration-none', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <li><p class="dropdown-item"><i class="fa-solid fa-trash pe-2"></i>Supprimer</p></li>
      <% end %>
    </ul>
  </div>
</div>


<div class="d-flex col-7 img-size" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80'); position: relative;">
  <p style="position: absolute; bottom: 0px; left: 0px; color: white;"><i class="fa-solid fa-location-dot px-3"></i><%= @project.address %></p>
  <p style="position: absolute; bottom: 30px; right: 5px; color: white;"><%= @rooms.count %> pièces à rénover</p>
  <p style="position: absolute; bottom: 0px; right: 5px; color: white;">Budget: <%= @project.budget %> €</p>
</div>
<div class="col-5 card-params"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
