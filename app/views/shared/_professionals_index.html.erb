<div class="d-flex justify-content-between align-items-baseline">
  <h1>Equipe</h1>
  <% if @professionals.empty? == false %>
    <%= link_to artisans_path(@artisans) do %>
      <button class="btn btn-primary"><i class="fa-solid fa-plus"></i> Ajouter un membre</button>
    <% end %>
  <% end %>
</div>
<div class="container mt-5">
  <% if @professionals.empty? %>
    <div class="d-flex flex-column align-items-center mt-5">
      <%= render :partial => 'svg/empty_pro' %>
      <h5 class="mt-5">Pas encore d'artisans ?</h5>
      <p class="mt-1">Trouver l'artisan qu'il vous faut</p>
      <%= link_to artisans_path do %>
        <button type="button" class="btn btn-empty mt-4"><i class="fa-solid fa-plus"></i> Ajouter un artisan</button>
      <% end %>
    </div>
  <% else %>
    <div class="professional-cards">
      <% @professionals.each do |professional| %>
        <div class="card-pro">
          <div class="card-pro-content mt-3">
            <div class="d-flex flex-column align-items-center">
              <%= cl_image_tag professional.photo.key, class: "avatar" %>
              <h5 class="mt-2"><%= professional.first_name %> <%= professional.last_name %></h5>
              <p class="card-text"><%= professional.speciality %></p>
            </div>

            <div class="d-flex justify-content-around">
              <p><%= professional.speciality %></p>
            </div>
          </div>
          <div class="card-pro-footer">
            <div class="d-flex justify-content-center">
              <% if (professional.chatrooms_as_professional.select { |chatroom| chatroom.client == current_user }) == [] %>
                <%= link_to create_chatroom_path(professional: professional), data: { turbo_method: :post } do %>
                  <button type="button" class="btn btn-pro">Contacter <i class="fa-solid fa-comment"></i></button>
                <% end %>
              <% else %>
                <%= link_to chatrooms_path(query: professional.first_name) do %>
                  <button type="button" class="btn btn-pro">Contacter <i class="fa-solid fa-comment"></i></button>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
