<div class="d-flex justify-content-between mt-5">
  <h3>Pièces en rénovation</h3>
  <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addroom">Ajouter une pièce</button>
</div>

<div class="cards-rooms">
  <% @rooms.each do |room| %>
    <div class="card-room">
      <img src="https://images.unsplash.com/photo-1600607686527-6fb886090705?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8a2l0Y2hlbnxlbnwwfDF8MHx8&auto=format&fit=crop&w=800&q=60" class="card-room-img" alt="">
      <div class="card-room-content w-100">
        <h6><%= room.room_type %></h6>
        <p>Coût: 3000€</p>
        <div class="d-flex justify-content-between flex-direction-row justify-content-between">
          <p>3 tâches en cours</p>
          <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
        </div>
      </div>
      <%#= link_to "Détruire cette pièce", destroy_room_path(room), class: "btn btn-danger" %>
      <%# room.photos.each do |photo| %>
      <%#= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <%# end %>
    </div>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="addroom" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">Créer ma pièce</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul>
          <li>1</li>
          <li>2</li>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
