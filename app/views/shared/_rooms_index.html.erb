<div class="container">
  <div class="row" style="margin-bottom: 30px;">
    <div class="container">
      <div class="row" style="display: flex; justify-content: space-between; align-items: center">
        <div class="col-6">
          <h1>Pièces en rénovation</h1>
        </div>

        <button class="col-6 btn btn-primary""><i class="fa-solid fa-plus"></i> Ajouter une pièce</button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="container">
      <% if @rooms.empty? %>
        <img src="https://images.unsplash.com/photo-1554995207-c18c203602cb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" class="card-room-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))" alt="Salon">
      <% else %>
        <% @rooms.each do |room| %>
          <div class="container">
            <div class="row card-pieces">
              <div class="col-3">
                <div class="cards-rooms">
                  <%= render "shared/room_card_small", project: @project, room: room %>
                </div>
              </div>
              <div class="col-9" style="padding: 20px 60px;">
                <h4><div class="row">Dernières taches ajoutées</div></h4>
                <div class="row card-pieces-row">Tache 1</div>
                <div class="row card-pieces-row">Tache 2</div>
                <div class="row card-pieces-row">Tache 3</div>
                <div class="row" style="display: flex; justify-content: flex-end;"><%= link_to "En savoir plus", project_room_path(room.project, room), class: "btn btn-show-room", style: "width: 200px;" %></div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      </div>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="addroom" tabindex="0" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">Créer ma pièce</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul>
          <li>1</li>
          <li>2</li>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
